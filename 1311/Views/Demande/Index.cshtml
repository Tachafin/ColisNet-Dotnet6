@model IEnumerable<_1311.Models.Demande>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between align-items-center">
    <h1 class="mt-3">Demande de ramassage <span class="btn btn-outline-primary ">@Model.Count()</span></h1>
    <a asp-action="Create" class="btn btn-success btn-lg mt-3"> <i class="bi bi-plus-circle mr-1"></i> Ajouter Demande de Ramassage</a>
</div>


<div class="col-md-12 text-center">
    
    @{
        if (@TempData["Message"] != null)
        {
            <hr />
            <h1 class="alert alert-info">

                @TempData["Message"]
            </h1>
        }
        

    }

</div>
<hr />
<div class="table-responsive">


    <table class="table table-stripped">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adresse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroTelephone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Note)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Resolu)
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreation)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.Adresse)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.NumeroTelephone)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                        @if (item.Resolu)
                        {
                            <p class="btn btn-success"> Bien Resolu</p>
                        }
                        else
                        {
                            <p class="btn btn-danger"> Non Resolu</p>
                        }

                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>