        <div id="element-to-print" class="element-to-print"   >
 

           
 

    
    <div class="container">
        <div class="row">
            <div class="col">
                <h1> GO COLIS</h1>
            </div>
            <DIV class="col m-3">
                <h4> Client : @Model.User.Boutique.Name </h4>
                <h4> Nom de la banque : @Model.User.Boutique.Bank.Name </h4>
                <h4> Rib :@Model.User.Boutique.Bank.Rib </h4>
                <h4>Date : @Model.DateCreation</h4>
                <h4>Statut : @Model.Statut</h4>
            </DIV>
        </div>
    </div>
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col">
               <h1> Relevé Détaillé</h1>
             <h4>  Relevé N° : @Model.Nom </h4>
            </div>

        </div>
    </div>
    <hr />
<div class="container">
<table class="table table-bordered">
    <thead>
<tr>
    <td>
        id
    </td>
    <td>
        Numero Commande
    </td>
    <td>
       Date Creation 
    </td>
    <td>
        Statut
    </td>
    <td>
        Prix
    </td>
    <td>
        Ville
    </td>
    <td>
        Frais
    </td>
</tr>
    </thead>
    <tbody>
         @foreach (var item in Model.Colis)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Numero_Colis)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date_creation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Statut)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Prix)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Client.Ville.Name)
                        </td>
                        <td>
                            @if(item.Client.Ville.Id == item.User.Boutique.Ville.Id)
                            {
                                <strong>20</strong>
                            }
                            else{
                                <strong>45</strong>
                            }
                        </td>
                        
                    </tr>
                }
           
    </tbody>
</table>
</div>
<br/>
<div class="container">
<div class="row">
<div class="col">
    </div>
    <div class="col">
    </div>
    <div class="col">
    
<table class="table table-bordered">
    <thead>

    </thead>
    <tbody>
        <tr>
            <td>
                Total Brut
            </td>
            <td>
               @Model.Total
            </td>
        </tr>
        <tr>
            <td>
                Total Frais
            </td>
            <td>
               @Model.Frais
            </td>
        </tr>
        <tr>
            <td>
                Total Net
            </td>
            <td>
               @Model.Net
            </td>
        </tr>
    </tbody>
</table>

</div>
</div>
</div>







</div>



















