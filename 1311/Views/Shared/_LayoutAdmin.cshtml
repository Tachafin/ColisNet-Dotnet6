<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - SB Admin</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/Theme/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    @*<script src="~/lib/datatables/js/jquery.dataTables.js"></script>*@
    <link rel="stylesheet" href="//cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css" />
    <script src="//cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js">
    </script>
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <style>
        body {
            background-color: #EEF2F4;
            font-family: 'Fredoka', sans-serif;
        }

        .btn.btn-outline-primary {
            border-color: #001f3f;
            color: #001f3f;
        }

            /* Custom CSS to change the color of the button and its border on hover */
            .btn.btn-outline-primary:hover {
                background-color: #001f3f;
                color: white !important;
            }

        .btt {
            background-color: #115173;
        }

            .btt:hover {
                background-color: #1160AA;
                color: black;
            }


    </style>
</head>
<body>
    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark " style="background-color:#001f3f;">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" href="index.html"> ColisNet Maroc </a>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <!-- Navbar Search-->
            <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
                <div class="input-group">
                    <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                    <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
                </div>
            </form>
            <!-- Navbar-->
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" asp-action="edit" asp-controller="Account">Edit Account</a></li>
                        <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" asp-action="Logout" asp-controller="authentification">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion" style="background-color:#001f3f;">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading">ADMIN</div>

                            <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                  <span class="text-white">      Dashboard </span>
                            </a>
                            <a class="nav-link" asp-controller="Colis" asp-action="Allcolis">
                                <div class="sb-nav-link-icon"> <i class="fas fa-columns"></i>   </div>
                                     <span class="text-white">   Colis</span>
                            </a>
                            <a class="nav-link" asp-controller="listeramassage" asp-action="index">
                                <div class="sb-nav-link-icon"> <i class="bi bi-journal-text"></i> </div>
                                      <span class="text-white">  Liste Ramassage</span>
                            </a>
                            <a class="nav-link" asp-controller="Demande" asp-action="All">
                                <div class="sb-nav-link-icon"> <i class="bi bi-truck"></i>  </div>
                                     <span class="text-white">   Demande</span>
                            </a>
                            <a class="nav-link" asp-controller="reclamation" asp-action="all">
                                <div class="sb-nav-link-icon">  <i class="bi bi-envelope-paper"></i>  </div>
                                      <span class="text-white">  Reclamation</span>
                            </a>
                            <a class="nav-link" asp-controller="Ville" asp-action="all">
                                <div class="sb-nav-link-icon">    <i class="bi bi-house-door"></i>   </div>
                                      <span class="text-white">  Ville</span>
                            </a>

                            <a class="nav-link" asp-controller="Livreur" asp-action="index">
                                <div class="sb-nav-link-icon">  <i class="bi bi-bicycle"></i>  </div>
                                     <span class="text-white">   Livreur</span>
                            </a>
                            <a class="nav-link" asp-controller="Facture" asp-action="index">
                                <div class="sb-nav-link-icon">  <i class="bi bi-cash"></i>   </div>
                               <span class="text-white">   Facture</span>
                            </a>
                            @{
                                if (User.IsInRole("Super Admin"))
                                {
                                    <div class="sb-sidenav-menu-heading">SUPER Admin</div>
                                    <a class="nav-link" href="/Administration/allusers">
                                        <div class="sb-nav-link-icon">  <i class="bi bi-people-fill"></i>  </div>
                                             <span class="text-white">   List User</span>
                                    </a>
                                    <a class="nav-link" href="/Administration/listroles">
                                        <div class="sb-nav-link-icon"> <i class="bi bi-toggles"></i>  </div>
                                               <span class="text-white"> List Roles</span>
                                    </a>
                                    <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                                        <div class="sb-nav-link-icon">  <i class="bi bi-arrow-up-right-square"></i>  </div>
                                             <span class="text-white">   Statistiques</span>
                                        <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                    </a>
                                    <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                        <nav class="sb-sidenav-menu-nested nav text-white">
                                            <span class="text-white">    <a class="nav-link text-white" asp-action="livreur" asp-controller="Statistique">Statistique Livreur</a>    </span>
                                            <span class="text-white">   <a class="nav-link text-white" asp-action="ville" asp-controller="Statistique"> Statistique Ville </a> </span>
                                        </nav>
                                    </div>
                                }
                            }




                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">Logged in as:</div>
                        @User.Identity.Name
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">

                        @RenderBody()
                    </div>

                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">ColisNet Maroc 2022</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/theme/js/scripts.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
        <script src="assets/demo/chart-area-demo.js"></script>
        <script src="assets/demo/chart-bar-demo.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
        <script src="~/theme/js/datatables-simple-demo.js"></script>
    </body>
    <div>
        @RenderBody()
    </div>
    @RenderSection(name:"DtColis",required:false);
</body>
</html>
