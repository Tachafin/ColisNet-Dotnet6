@model List<EditUserRoleViewModel>
@{
Layout ="~/Views/Shared/_LayoutAdmin.cshtml";
}
<form method="post" asp-action="EditUserRole">
    <div class="my-5">
        <div class="card">
            <div class="card-header">
                <span class="display-3">Add Or Remove User from This role</span>
                <hr/>
                <input disabled value="@ViewBag.RoleId" class="form-control"/>
            
            </div>
            <div class="card-body">
                @for(int i=0;i<Model.Count;i++)
                {
                    <div class="form-check">
                        <input asp-for="@Model[i].UserId" hidden/>
                         <input asp-for="@Model[i].UserName" hidden/>
                        <input asp-for="@Model[i].IsSelected" class="form-check-input"/>
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName.ToUpper()</label>
                    </div>

                }

            </div>
            <div class="card-footer">
                <a asp-action="Editrole" asp-route-id="@ViewBag.RoleId" class="btn btn-primary mx-2" >Back To Role</a>
            <button type="submit" class="btn btn-success">
                Update
            </button>
            </div>


        </div>
    </div>
</form>