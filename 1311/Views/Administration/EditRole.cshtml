@model _1311.Models.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>EditRole <strong class="text-danger"> @Model.RoleName </strong> </h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input disabled asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h1 class="text-center"> List Users</h1>
    </div>
    <div class="card-body">
        @if (Model.Users.Count == 0)
        {
            <h1>Non User</h1>
        }



        @foreach (String item in Model.Users)
        {
            <h3 class="text-danger text-center">
                @item
            </h3>
            <hr />
        }


    </div>

    <div class=" card-foter">
        <a class="btn btn-success m-2" asp-action="EditUserRole" asp-route-id="@Model.Id">Ajouter user</a>


        <a class="btn btn-dark" asp-action="listroles">Back to List</a>


    </div>

</div>


