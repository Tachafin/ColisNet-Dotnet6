
@model EditAccountViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<h1 class="text-center mt-3">Register Nouveau USER </h1>
<hr />
<div class="text-danger" asp-validation-summary=All>
</div>

<form asp-action="register" asp-controller="Account" method="post">
    <div class="container">
        <div class="row">
            <div class="col-8">
                <div class="card shadow mb-5 bg-white rounded">
                    <div class="card-header ">
                        <span class="card-title"> Information Personnelle</span>
                    </div>
                    <div class="card-body">


                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="FirstName"></label>
                                        <input type="text" class="form-control" asp-for="FirstName" />

                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="LastName"></label>
                                        <input type="text" class="form-control" asp-for="LastName" />

                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber"></label>
                                        <input type="text" class="form-control" asp-for="PhoneNumber" />
                                        <span class="small text-danger" asp-validation-for="PhoneNumber"></span>

                                    </div>
                                </div>
                            </div>
                        </div>
                        @* Partie 2*@
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="RegistreCommerce"></label>
                                        <input type="text" class="form-control" asp-for="RegistreCommerce" />


                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="VilleName"></label>
                                        <select asp-for="VilleName" class=" form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                            @foreach (var item in ViewBag.ListVille)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }


                                        </select>


                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="Adresse"></label>
                                        <input type="text" class="form-control" asp-for="Adresse" />
                                        <span class="small text-danger" asp-validation-for="Adresse"></span>

                                    </div>
                                </div>
                            </div>
                        </div>
                        @* fin partie 2*@
                        @*                      Partie 3 *@
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="BoutiqueName"></label>
                                        <input type="text" class="form-control" asp-for="BoutiqueName" />

                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="BankName"></label>
                                        <input type="text" class="form-control" asp-for="BankName" />

                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="RIB"></label>
                                        <input type="text" class="form-control" asp-for="RIB" />
                                        <span class="small text-danger" asp-validation-for="RIB"></span>

                                    </div>
                                </div>
                            </div>
                        </div>
                        @*     fin partie 3 *@




                        <br\>



                    </div>
                </div>
            </div>
            <div class="col-4">


                <div class="card shadow mb-5 bg-white rounded">
                    <div class="card-header"> Information Login</div>
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="text" class="form-control" asp-for="Email" />

                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="Password" />
                            <span class="small text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword" />
                            <span class="small text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>


                        <br\>
                            <input type="submit" class="btn btn-primary" value="Enregistrer" />

                    </div>
                </div>
            </div>
        </div>
    </div>

</form>


