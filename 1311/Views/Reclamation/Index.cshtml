@model IEnumerable<_1311.Models.Reclamation>

@{
    ViewData["Title"] = "Reclamation";
}
<div class="d-flex justify-content-between align-items-center">
    <h1 class="mt-3">Reclamation <span class="btn btn-outline-primary ">@Model.Count()</span></h1>
    <a asp-action="Create" class="btn btn-success btn-lg mt-3"> <i class="bi bi-plus-circle mr-1"></i> Ajouter Reclamation</a>
</div>

<div class="card mt-3">

    <div class="card-body">

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateCreation)
                        </th>
                        <th>
                            Resolu
                        </th>



                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreation)
                            </td>
                            <td>
                                @{
                                    if (item.Statut)
                                    {
                                        <div class="text-success">Resolu</div>
                                    }
                                    else
                                    {
                                        <div class="text-danger">Non resolu</div>

                                    }

                                }
                            </td>


                            <td>

                                <a asp-action="Details" class="btn btn-outline-primary" asp-route-id="@item.Id">Details</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


