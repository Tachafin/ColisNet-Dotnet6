        <div class="card-body">
            <center>     <span class="h-50">   <i class="bi bi-person-circle"></i> ESPACE LOGIN FOR <strong>ADMIN</strong> </span> </center>
            <hr />
            <div class="d-flex justify-content-center mt-3">
                <img style="width:225px;height:250px" src="/img/logo.png" />
            </div>
            <div class="row d-flex justify-content-center">
                Authentification

            </div>
            <div class="row d-flex justify-content-center">
                Entrez votre identifiant et votre mot de passe
            </div>

            <div class="container">
                <form asp-action="admin" asp-controller="Authentification" method="post" class="mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="text-center"></label>
                                <input type="text" class="form-control" asp-for="Email" />
                                <span class="small text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Password" class="text-center"></label>
                                <input type="password" class="form-control" asp-for="Password" />
                                <span class="small text-danger" asp-validation-for="Password"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="form-group text-center">
                                <input type="submit" class="btn btn-dark w-50 mt-2" value="LOGIN" />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 text-center">
                        @{
                            if (@ViewBag.error != null)
                            {
                                <hr>
                                <h2 class="text-danger">@ViewBag.error</h2>
                            }
                        }
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>
            </div>


        </div>
