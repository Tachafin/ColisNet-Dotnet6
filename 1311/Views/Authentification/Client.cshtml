@model _1311.Models.ViewModels.AccountLoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Fredoka&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<script src="~/lib/jquery/jquery.js"></script>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        body {
            background-color: #EEF2F4;
        }
    </style>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>


</head>
<body>

    <div class="d-flex justify-content-center mt-3 mb-2">
        <div class="card w-75 w-md-50 border mt-3">
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="bi bi-person-circle"></i>
                    <span class="h-50"> ESPACE LOGIN FOR <strong>ADMIN</strong> </span>
                </div>
                <hr />

                <div class="d-flex justify-content-center ">
                    <img style="width:225px;height:250px" src="/img/logo.png" />
                </div>

                <div class="row mt-3">
                    <div class="col-md-12 text-center">
                        Authentification
                    </div>
                    <div class="col-md-12 text-center">
                        Entrez votre identifiant et votre mot de passe
                    </div>
                </div>

                <div class="container mt-3">
                    <form asp-action="admin" asp-controller="Authentification" method="post">
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="text-center"></label>
                                    <input type="text" class="form-control" asp-for="Email" />
                                    <span class="small text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password" class="text-center"></label>
                                    <input type="password" class="form-control" asp-for="Password" />
                                    <span class="small text-danger" asp-validation-for="Password"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="form-group text-center">
                                    <input type="submit" class="btn btn-dark w-100 mt-2" value="LOGIN" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 text-center mt-3">
                            @if (@ViewBag.error != null)
                            {
                                <hr>
                                <h2 class="text-danger">@ViewBag.error</h2>
                            }
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </form>
                </div>
            </div>

        </div>
    </div>




</body>
</html>